<xs:schema xmlns:xs='http://www.w3.org/2001/XMLSchema' 
  targetNamespace='urn:riv:clinicalprocess:activityprescription:prescribe:enum:2'
  elementFormDefault='qualified' attributeFormDefault='unqualified' version='2.0'>

    <xs:simpleType name="MedicationStatusEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="ACTIVE">
                <xs:annotation>
                    <xs:documentation>Aktiv</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="INACTIVE">
                <xs:annotation>
                    <xs:documentation>Inaktiv</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="ALL">
                <xs:annotation>
                    <xs:documentation>Alla</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
        </xs:restriction>
    </xs:simpleType>

    <!-- A better name for LF? -->
    <xs:simpleType name="LFConsentEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="ONETIME_CONSENT">
                <xs:annotation>
                    <xs:documentation>Engångs-samtycke.</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="CONSENT">
                <xs:annotation>
                    <xs:documentation>Tillsvidaresamtycke registrat hos EHM.</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="EMERGENCY">
                <xs:annotation>
                    <xs:documentation>Nödåtgärd, emergency</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
        </xs:restriction>
    </xs:simpleType>
    
    <xs:simpleType name="ResultCodeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="OK"/>
            <xs:enumeration value="INFO"/>
            <xs:enumeration value="ERROR"/>
        </xs:restriction>
    </xs:simpleType>
    
    <!-- @TODO se över alla felmeddelanden, eventuellt skapa subkoder -->
    <xs:simpleType name="ErrorCodeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="VALIDATIONERROR"><xs:annotation>
                <xs:documentation>En eller flera inparametrar innehåller felaktiga värden. Angiven tjänst utfördes ej.</xs:documentation></xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="ACCESSDENIED"/>
            <xs:enumeration value="NOTFOUND"/>
            <xs:enumeration value="ALREADYEXISTS"/>
            <xs:enumeration value="INVALIDSTATE"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="SubCodeEnum">
        <xs:restriction base="xs:string">
            <xs:enumeration value="SUB_RR_ERROR">
                <xs:annotation><xs:documentation>Felmeddelande</xs:documentation></xs:annotation>
            </xs:enumeration>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
