<xs:schema
        xmlns:xs='http://www.w3.org/2001/XMLSchema'
        xmlns='urn:riv:clinicalprocess:activityprescription:prescribe:1'
        targetNamespace='urn:riv:clinicalprocess:activityprescription:prescribe:1'
        elementFormDefault='qualified'
        attributeFormDefault='unqualified'
        version='1.0'>

    <xs:annotation>
        <xs:documentation>
            Beskrivning: 	    Informationsobjekt för ordinationsorsaker
            Revisionshistorik:  2013-05-03 Daniel Sundberg, Apotekens Service AB
                                Separat xsd för ordinationsorsak.
                                2013-06-28 Daniel Sundberg, Apotekens Service AB.
                                Konsoliderat struktur och ordning för läsbarhet.
        </xs:documentation>
    </xs:annotation>

    <xs:complexType name="Insattningsorsaker">
        <xs:sequence>

            <xs:element name="huvudorsak"
                        type="Insattningsorsak"
                        minOccurs="1"
                        maxOccurs="unbounded"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Huvudordinationsorsak för insättning.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="underorsak"
                        type="Insattningsorsak"
                        minOccurs="0"
                        maxOccurs="unbounded"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Underordinationsorsak för insättning.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:any namespace="##other"
                    processContents="lax"
                    minOccurs="0"
                    maxOccurs="unbounded"/>

        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Insattningsorsak">
        <xs:sequence>

            <xs:element name="orsak"
                        type="Orsak"
                        minOccurs="1"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Ordinationsorsak till insättning. Snomed CT-kod används för vald ordinationsorsak.
                        Koden valideras att den finns i angiven version av Socialstyrelsens
                        kodsystem för ordinationsorsaker (NKOO).
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="annanOrsak"
                        type="xs:string"
                        minOccurs="0"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Ordinationsorsak i fritext om ”Annan orsak” anges.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:any namespace="##other"
                    processContents="lax"
                    minOccurs="0"
                    maxOccurs="unbounded"/>

        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Orsak">
        <xs:sequence>

            <xs:element name="kod"
                        type="xs:string"
                        minOccurs="1"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Kod för orsaken.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="text"
                        type="xs:string"
                        minOccurs="1"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Textutläsning av kod.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="register"
                        type="xs:string"
                        minOccurs="1"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Unikt id för det kodsystem som används.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="version"
                        type="xs:string"
                        minOccurs="1"
                        maxOccurs="1"
                        nillable="false">
                <xs:annotation>
                    <xs:documentation>
                        Version av det kodsystem som används.
                    </xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:any namespace="##other"
                    processContents="lax"
                    minOccurs="0"
                    maxOccurs="unbounded"/>

        </xs:sequence>
    </xs:complexType>

</xs:schema>